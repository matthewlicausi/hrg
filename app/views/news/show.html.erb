	<!-- PAGE TITLE
================================================== -->
	<section class="pageheader-default text-center">
	<div class="semitransparentbg">
	</div>
	</section>
	<div class="wrapsemibox">
		<div class="semiboxshadow text-center">
			<img src="/img/shp.png" class="img-responsive" alt="">
		</div>
		<!-- BLOG
================================================== -->
		<section class="container animated fadeInDown notransition">
		<div class="row blogindex">
			<!-- MAIN -->
			<div class="col-md-9">
				<div class="text-center">
					<h2><%= @post.title %></h2>
					<span class="meta bottomspace30">By <%= link_to @post.author, news_path(:author => @post.author ) %><span class="bullet"> • </span> <%= @post.created_at.strftime("%B %d, %Y") %> <span class="bullet"> • </span><%= link_to @post.category, news_path(:category => @post.category ) %></span>
				</div>
				<div class="row">
					<div class="col-md-12">
						<% if @post.image? %>
						  <%= image_tag @post.image.url, :class => "img-responsive pull-left", :style => "max-width:30%;" %>
						<% end %>
						<%= @post.body.html_safe %>
					</div>
				</div>
			</div>
			<!-- SIDEBAR -->
			<div class="col-md-3">
				<aside class="sidebar topspace30">
					<div class="wowwidget">
						<h4>Categories</h4>
						<ul class="categories">
							<li><%= link_to "HRG Consulting", news_path(:category=>"HRG Consulting") %></li>
							<li><%= link_to "HRO Outsourcing", news_path(:category=>"HRO Outsourcing") %></li>
							<li><%= link_to "Newsletters", news_path(:category=>"Newsletters") %></li>
						</ul>
					</div>
					<div>
					<script src="//platform.linkedin.com/in.js" type="text/javascript">
					  lang: en_US
					</script>
					<script type="IN/Share" data-counter="right"></script>
				</aside>
			</div>
			<!-- end sidebar -->
		</div>
		</section>
